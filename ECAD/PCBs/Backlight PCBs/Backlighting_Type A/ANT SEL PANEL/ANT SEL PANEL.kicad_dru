(version 1)

#Copper constraints for 1/2 inch NPTH for switches

(rule "GND copper constraint for .5in NPTH Pad"
	(layer B.Cu)
	(constraint physical_hole_clearance (min 3.65mm))
	(condition "A.Pad_Type == 'NPTH, mechanical' && A.Hole_Size_X >= (12mm)"))

(rule "+5v copper constraint for .5in NPTH Pad"
	(layer F.Cu)
	(constraint physical_hole_clearance (min 1mm))
	(condition "A.Pad_Type == 'NPTH, mechanical'"))
